    <%- include("header") -%>
    
    <div class="box" id="heading">
        <h1><%=listTitle%></h1>

    </div>

    <div class="box">
        <% newListValues.forEach(function(item) { %>      
            <form action="/delete" method="post">   
            <div class="item">
                <input type="checkbox" name="completedValue" onChange='this.form.submit()' value="<%=item._id%>"></input>
                <input type="hidden" name="listName" value="<%=listTitle%>"></input>
                <p> <%=item.name%> </p>
            </div>
            </form>
        <% }); %>
                  
        <form class="item" action="/" method="post">
            <input type='text' name="newValue" placeholder="New Item" autocomplete="off"></input>
            <button type="submit" name="list" value="<%=listTitle%>">+</button>
        </form>

    </div>

    <%- include("footer") -%>